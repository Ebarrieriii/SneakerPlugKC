@model SneakerPlugKC.DATA.EF.Shoe

<script>
    var myModal = document.getElementById('myModal')
    var myInput = document.getElementById('myInput')

    myModal.addEventListener('shown.bs.modal', function () {
        myInput.focus()
    })

</script>

<!-- Button trigger modal -->
<button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">
    Add Product
</button>
@using (Html.BeginForm("Create", "Shoes", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <!-- Modal -->
    <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-xl">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel" style="color: black;">Add Product</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="row justify-content-center">
                        <div class="col-md-4">
                            <div class="form-floating mb-3">
                                @Html.EditorFor(m => m.ShoeName, new { htmlAttributes = new { @class = "form-control", @id = "floatingShoeName", @placeholder = "Shoe Name" } })
                                @Html.ValidationMessageFor(model => model.ShoeName, "", new { @class = "text-danger" })
                                <label for="floatingShoeName">Shoe Name</label>
                            </div>
                            <div class="form-floating mb-3">
                                @Html.EditorFor(m => m.Price, new { htmlAttributes = new { @class = "form-control", @id = "floatingPrice", @placeholder = "Price" } })
                                @Html.ValidationMessageFor(model => model.Price, "", new { @class = "text-danger" })
                                <label for="floatingPrice">Price</label>
                            </div>
                            <div class="form-floating mb-3">
                                @Html.EditorFor(m => m.Quantity, new { htmlAttributes = new { @class = "form-control", @id = "floatingQuantity", @placeholder = "Quantity" } })
                                @Html.ValidationMessageFor(model => model.Quantity, "", new { @class = "text-danger" })
                                <label for="floatingQuantity">Quantity</label>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-floating mb-3">
                                @Html.DropDownList("SizeId", null, htmlAttributes: new { @class = "form-select", @id = "floatingSize" })
                                <label for="floatingSize">Size</label>
                            </div>
                            <div class="form-floating mb-3">
                                @Html.EditorFor(m => m.Condition, new { htmlAttributes = new { @class = "form-control", @id = "floatingCondition", @placeholder = "Condition" } })
                                @Html.ValidationMessageFor(model => model.Condition, "", new { @class = "text-danger" })
                                <label for="floatingCondition">Condition</label>
                            </div>
                            <div class="form-floating mb-3">
                                <div class="form-check p-3" style="padding-left: 0 !important;">
                                    @Html.EditorFor(m => m.IsInStock)
                                    <label class="form-check-label" for="flexSwitchCheckDefault">In Stock</label>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row justify-content-center">
                        <div class="col-md-12">
                            <h4 style="color: black; text-align: center;">Description</h4>
                            @Html.EditorFor(m => m.Description, new { htmlAttributes = new { @style = "margin: auto; width: 60%;", @class = "form-control", @rows = "4" } })
                        </div>
                    </div>
                    <div class="form-group mt-2">
                        <div class="col-md-12" style="text-align: center;">
                            No Images Bigger Than 400px: <input type="file" style="display: inline" name="logo" placeholder="Choose Photo" />
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="submit" value="create" class="btn btn-primary">Add Product</button>
                </div>
            </div>
        </div>
    </div>

}



